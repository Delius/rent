<div class="row">

  <div class="hero col-md-6 col-md-offset-3">
    
    <h3>Property yield summary</h3>
    <h5>You're looking at a yearly rental yield of <span> <%= number_to_currency(@property.year_return, { unit: "£"}) %></span> or <span> <%=(@property.year_return_percent).round(2)%>%</span></h5>
    
  </div>

</div>

<div class="row">

  <div class="yield col-md-6 col-md-offset-3">

        <%= link_to 'Edit', edit_property_path(@property) , class: 'button alert'%>

  	<table class="table table-bordered">
      <tbody>

      <tr>
        <th>Post Code</th>
        <td><%=@property.postCode%></td>
      </tr>
      <tr>
        <th>Property Price</th>
        <td><%=number_to_currency(@property.propertyCost, { unit: "£"})%></td>
      </tr>
      <tr>
        <th>Current Monthly Rent</th>
        <td><%=number_to_currency(@property.propertyRent, { unit: "£"})%></td>
      </tr>
      <tr class="success">
        <th>Net Yearly Yield</th>
        <td><%=number_to_currency(@property.year_return, { unit: "£"})%></td>
      </tr>
      <tr >
        <th>Net Yearly Yield Percentage</th>
        <td><%=(@property.year_return_percent).round(2)%>%</td>
      </tr>
    </tbody>
  		
  	</table>

  </div>

</div>

